  <Menu name="ServerNameMenu"
        x="200"
        y="20"
        direction ="vertical"
        align ="left"
        gap ="2"
        anchor="top left"
  >
    <StaticText name ="ServerNameText" width ="200" height="24">
      <Text>SERVER NAME:</Text>
      <FontHeight>24</FontHeight>
      <FontColour r="255" g="255" b="255"/>
    </StaticText>
    
