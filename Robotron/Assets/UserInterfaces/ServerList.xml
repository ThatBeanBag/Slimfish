    <StaticText name ="StatusText" width ="200" height="24">
      <Text>STATUS:</Text>
      <FontHeight>24</FontHeight>
      <FontColour r="255" g="255" b="255"/>
    </StaticText>
    
  </Menu>

  <Menu name="ButtonMenu"
        x="200"
        y="20"
        direction ="vertical"
        align ="middle"
        gap ="2"
        anchor="top left"
  >
    <Button name="ServerListButtonTemplate" width="800" height="24">
      <Image>Images/ServerListButton.png</Image>
      <OutMask x="0" y="0" />
      <HoverMask x="0" y="24" />
      <PressedMask x="0" y="48" />
      <Toggled></Toggled>
    </Button>
    
  </Menu>


